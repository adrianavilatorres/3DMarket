<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.a3dmarket">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeDay">
        <activity android:name=".Credits"></activity>
        <activity
            android:name=".ResetPassword"
            android:theme="@style/AppThemeDay" />
        <activity
            android:name=".PhoneLogin"
            android:theme="@style/AppThemeDay" />
        <activity
            android:name=".Home"
            android:theme="@style/AppThemeDay" />
        <activity
            android:name=".Fragments.ItemDetail"
            android:theme="@style/AppThemeDay" />
        <activity
            android:name=".HomeNotUser"
            android:theme="@style/AppThemeDay" />
        <activity
            android:name=".Fragments.ItemDetailNotUser"
            android:theme="@style/AppThemeDay" />
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:theme="@style/AppThemeDay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CheckoutPayment"
            android:theme="@style/AppThemeDay"></activity>
    </application>

</manifest>